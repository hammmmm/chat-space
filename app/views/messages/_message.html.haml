.messages{data: {message: {id: message.id}}}
  .message-items
    .message-items__contents
      .message-items__contents--name
        = message.user.name
      .message-items__contents--date
        = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
    .message-items__text
      - if message.content.present?
        = message.content
    = image_tag message.image.url, class: 'message-items__image' if message.image.present?
